<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center font-weight-bold mb-4">Breed Name: <%= @breed.name %></h3>
      <h4 class="text-center text-muted mb-4">Size: <%= @breed.size %></h4>

      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th class="text-center">Image URL</th>
          </tr>
        </thead>
        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td class="text-center"><%= image.url %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center mt-4">
        <%= link_to 'Back to Breeds', breeds_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
